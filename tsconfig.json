{
	"compilerOptions": {
		"module": "NodeNext",
		"esModuleInterop": true,
		"target": "ES6",
		"moduleResolution": "Node",
		"removeComments": true,
		"outDir": "./dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": [
		"./src/**/*.ts"
	]
}